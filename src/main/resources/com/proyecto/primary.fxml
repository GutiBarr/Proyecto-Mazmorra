<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controlador.JugadorControlador" spacing="10" alignment="CENTER">
    <Label text="Crear Personaje" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Salud:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="campoSalud" text="100" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Fuerza:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="campoFuerza" text="10" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Defensa:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="campoDefensa" text="5" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Velocidad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="campoVelocidad" text="8" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    
    <Button text="Comenzar Juego" onAction="#crearJugador" style="-fx-font-size: 14;"/>
</VBox>
